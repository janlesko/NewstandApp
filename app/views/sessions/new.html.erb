<div class="login">
  <div class="container">
    <p>Please log in to display full articles.</p><br />
    <div class="form">

      <%= form_for(:session, url: login_path) do |f| %>
        <%= f.email_field :email, :placeholder => "Email" %>
        <%= f.password_field :password, :placeholder => "Password" %>
        <%= f.submit "Log in", class: "btn-submit" %>
      <% end %>

    </div>
  </div>
</div>